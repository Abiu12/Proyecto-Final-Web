<%- include("../comunes/components/header-component") -%>
    <div class="container col-12">
        <div class="row">
            <div class="col">
                <h1>Orden de trabajo</h1>
                <div class="row">
                    <div class="col">
                        <h3>Cliente: <%=recordsCliente["nombre"]%>
                            <%=recordsCliente["primerApellido"]%>
                                <%=recordsCliente["segundoApellido"]%>
                        </h3>
                    </div>

                    <div class="col">
                        <h3>Electrodom√©stico: <%=recordsElectrodomestico["nombre"]%>
                            <%=recordsElectrodomestico["marca"]%>
                                <%=recordsElectrodomestico["modelo"]%>
                        </h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-9"></div>
            <div class="col-1">
                <% if(recordsOrden==null){ %>
                    <a href="/orden/view/agregar_orden_trabajo/<%=recordsCliente["idCliente"]%>/<%=recordsElectrodomestico["idElectrodomestico"]%>"><input class="btn btn-secondary"
                                type="button" value="Agregar orden"></a>
                    <% } %>
            </div>
        </div>


        <br>

        <div class="row">
            <div class="col-12 overflow-auto">
                <table class="table ">
                    <thead class="table-success table-striped">
                        <tr>
                            <th>Trabajo a realizar</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>

                        <tr>
                            <% if(recordsOrden!=null){ %>
                                <td>
                                    <%=recordsOrden["trabajo"] %>
                                </td>
                                <td>
                                    <%=recordsOrden["precio"] %>
                                </td>

                                <td>
                                    <div class="row">
                                        <div class="col">
                                            <a href="/orden/view/modificar_electrodomestico/<%=recordsCliente["idCliente"] %>/<%=recordsElectrodomestico["idElectrodomestico"] %>/<%=recordsOrden["idOrden"] %>" class="fas fa-pen"> </a>

                                        </div>
                                        <div class="col">
                                            <a href="/orden/delete/<%=recordsCliente["idCliente"] %>/<%=recordsElectrodomestico["idElectrodomestico"] %>/<%=recordsOrden["idOrden"] %>"class="fas fa-trash-alt"></a>
                                        </div>
                                    </div>
                                </td>
                                <% } %>
                        </tr>

                    </tbody>
                </table>
            </div><!-- Fin de col-11 -->
        </div><!-- Fin de Row -->



    </div>

    <%- include("../comunes/components/footer-component") -%>