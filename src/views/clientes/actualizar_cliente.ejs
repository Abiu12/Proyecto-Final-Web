<%- include("../comunes/components/header-empleado-component") -%>
<title>Actualizar Cliente</title>

<div class="container">
    <h1>Actualizar cliente</h1>
    <br>
    <br>
    <!-- La accion al picar el boton es insertar -->
    <form action="/empleado/clientes/update/<%=idCliente%>" method="POST">
        <br>
        <!-- El name debe ser tal cual esta en la bd, es la identificacion -->
        <div class="row">
            <div class="col-10">
                <h2>DATOS GENERALES</h2>
            </div>
            <div class="col-2">
                <h6>* Campos obligatorios</h6>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <h3>Nombre*</h3>
            </div>
            <div class="col">
                <h3>Apellido paterno*</h3>
            </div>
            <div class="col">
                <h3>Apellido Materno*</h3>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <input type="text" onkeypress="return soloLetras(event)" class="form-control mb-3" name="nombre"
                    value="<%=nombre%>" required>
            </div>
            <div class="col">
                <input type="text" onkeypress="return soloLetras(event)" class="form-control mb-3"
                    name="apellidoPaterno" value="<%=apellidoPaterno%>" required>
            </div>
            <div class="col">
                <input type="text" onkeypress="return soloLetras(event)" class="form-control mb-3"
                    name="apellidoMaterno" value="<%=apellidoMaterno%>" required>
            </div>
        </div>
        <br>
        <br>
        <br>
        <h2>DATOS DE CONTACTO</h2>
        <br>
        <div class="row">
            <div class="col">
                <h3>Telefono*</h3>
            </div>
            <div class="col">
                <h3>Calle*</h3>
            </div>
            <div class="col">
                <h3>Número de casa interior</h3>
            </div>
            <div class="col">
                <h3>Número de casa exterior</h3>
            </div>
            <div class="col">
                <h3>Colonia</h3>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <input type="text" class="form-control mb-3" name="telefono" value="<%=telefono%>"
                    onchange="return ValidarTelefono(this)" onkeypress="return soloNumeros(event);" required
                    minlength="10" maxlength="10" required>
            </div>
            <div class="col">
                <input type="text" class="form-control mb-3" name="calle" value="<%=calle%>"
                    onkeypress="return soloLetras(event)" required>
            </div>
            <div class="col">
                <input type="text" class="form-control mb-3" name="noCasaInt" value="<%=noCasaInt%>"
                    onkeypress="" required minlength="1" maxlength="4" required>
            </div>
            <div class="col">
                <input type="text" class="form-control mb-3" name="noCasaExt" value="<%=noCasaExt%>"
                    onkeypress="return soloNumeros(event);" required minlength="1" maxlength="4" required>
            </div>
            <div class="col">
                <input type="text" class="form-control mb-3" name="colonia" value="<%=colonia%>"
                    onkeypress="return soloLetras(event)" onkeypress="return soloLetras(event)" required>
            </div>

        </div>
        <br>
        <br>
        <div class="row">
            <div class="col">
                <button class="btn btn-primary" type="submit">Actualizar cliente</button>
                <!-- <input type="submit" class="btn btn-primary"> -->
            </div>

        </div>

    </form>

</div>
<%- include("../comunes/components/footer-component") -%>