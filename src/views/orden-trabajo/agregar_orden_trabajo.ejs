<% if(user !== undefined && user.rol === "3333" ){ %> 
<%- include("../comunes/components/header-component") -%>
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Orden de trabajo</h1>
            <div class="row">
                <div class="col">
                    <h3>Cliente: <%=recordsCliente["nombre"]%>
                        <%=recordsCliente["primerApellido"]%>
                            <%=recordsCliente["segundoApellido"]%>
                    </h3>
                </div>

                <div class="col">
                    <h3>Electrodoméstico: <%=recordsElectrodomestico["nombre"]%>
                        <%=recordsElectrodomestico["marca"]%>
                            <%=recordsElectrodomestico["modelo"]%>
                    </h3>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <form action="/orden/create/<%=recordsCliente["idCliente"] %>/<%=recordsElectrodomestico["idElectrodomestico"] %>" method="POST">
        <h2 class="title-black">Datos de la orden</h2>
        <br>
        <div class="row">
            <div class="col">
                <h4>Trabajo a realizar*</h4>
            </div>
            <div class="col">
                <h4>Precio*</h4>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <input type="text"  class="form-control mb-3" name="trabajo"
                    required>
            </div>
            <div class="col">
                <input type="text" onkeypress="return soloNumeros(event);" class="form-control mb-3" name="precio" required>
            </div>
        </div>
        <br>
        <br>
        <br>
        <br>
        <div class="row">
            <div class="col">
                <h4>Fecha de salida*</h4>
            </div>
            <div class="col">
                <h4>Estado de garantia*</h4>
            </div>
            <div class="col">
                <h4>Observaciones*</h4>
            </div>
        </div>

        <div class="row">

            <div class="col">
                <input type="date" class="form-control mb-3" name="fecha_salida" placeholder="" required>
            </div>
            <!-- <div class="col">
                <select name="estado" id="estado" class="form-control mb-3">
                    <option value="En espera">En espera</option>
                    <option value="En revisión">En revisión</option>
                    <option value="En reparación">En reparación</option>
                    <option value="Terminado">Terminado</option>
                    <option value="No se trabajo">No se trabajó</option>
                </select>
            </div> -->
            <div class="col">
                <select name="garantia" id="garantia" class="form-control mb-3">
                    <option value="Sin aplicar">Sin aplicar</option>
                    <option value="Vigente">Vigente</option>
                    <option value="Vencida">Vencida</option>
                </select>
            </div>
            <div class="col">
                <input type="text" class="form-control mb-3" name="observaciones" placeholder="" required>
            </div>
        </div>
        <div class="row">
            <div class="col-9"></div>
            <div class="col">
                <button class="btn btn-secondary" type="submit">Registrar orden de trabajo</button>
            </div>
        </div>
    </form>
</div>
  <%- include("../comunes/components/footer-component") -%>
  <% } else { %>
    <%- include("../comunes/components/error-sesion") -%>
   <% } %> 