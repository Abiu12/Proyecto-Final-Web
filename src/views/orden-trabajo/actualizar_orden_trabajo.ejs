<% if(user !== undefined && user.rol === "3333" ){ %> 
<%- include("../comunes/components/header-component") -%>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Actualizar orden de trabajo</h1>
                <div class="row">
                    <div class="col">
                        <h3>Cliente: <%=recordsCliente["nombre"]%>
                            <%=recordsCliente["primerApellido"]%>
                                <%=recordsCliente["segundoApellido"]%>
                        </h3>
                    </div>
    
                    <div class="col">
                        <h3>Electrodoméstico: <%=recordsElectrodomestico["nombre"]%>
                            <%=recordsElectrodomestico["marca"]%>
                                <%=recordsElectrodomestico["modelo"]%>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <br>
        <form action="/orden/update/<%=recordsElectrodomestico["idCliente"]%>/<%=recordsElectrodomestico["idElectrodomestico"]%>/<%=recordsOrden["idOrden"]%> " method="POST">
                <h2 class="title-black">Datos de la orden</h2>
                <br>
                <div class="row">
                    <div class="col">
                        <h4>Trabajo a realizar*</h4>
                    </div>
                    <div class="col">
                        <h4>Precio</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <input type="text" onkeypress="return soloLetras(event)" class="form-control mb-3" name="trabajo"
                            value="<%=recordsOrden["trabajo"]%>" required>
                    </div>
                    <div class="col">
                        <input type="text" onkeypress="return soloNumeros(event);" class="form-control mb-3" name="precio" value="<%=recordsOrden["precio"]%>" required>
                    </div>
                </div>

                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <div class="row">
                    <div class="col">
                        <h4>Fecha de salida*</h4>
                    </div>
                    <div class="col">
                        <h4>Estado*</h4>
                    </div>
                    <div class="col">
                        <h4>Estado de garantia*</h4>
                    </div>
                    <div class="col">
                        <h4>Observaciones*</h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <input type="date" class="form-control mb-3" name="fecha_salida" value="<%=recordsOrden["fecha_salida"]%>" required>
                    </div>
                    <div class="col">
                        <select name="estado" id="estado" class="form-control mb-3">
                            <option value="En espera" <% if(recordsOrden["estado"]=="En espera" ){%>
                                <%="selected" %>
                                    <% } %> >En espera
                            </option>
                            <option value="En reparación" <% if(recordsOrden["estado"]=="En reparación" ){%>
                                <%="selected" %>
                                    <% } %> >En reparación
                            </option>
                            <option value="Terminado" <% if(recordsOrden["estado"]=="Terminado" ){%>
                                <%="selected" %>
                                    <% } %> >Terminado
                            </option>
                            <option value="No se trabajo" <% if(recordsOrden["estado"]=="No se trabajo" ){%>
                                <%="selected" %>
                                    <% } %> >No se trabajó
                            </option>
                        </select>
                    </div>
                    <div class="col">
                        <select name="garantia" id="garantia" class="form-control mb-3">
                            <option value="Sin aplicar" <% if(recordsOrden["garantia"]=="Sin aplicar" ){%>
                                <%="selected" %>
                                    <% } %> >Sin aplicar
                            </option>
                            <option value="Vigente" <% if(recordsOrden["garantia"]=="Vigente" ){%>
                                <%="selected" %>
                                    <% } %> >Vigente
                            </option>
                            <option value="Vencida" <% if(recordsOrden["garantia"]=="Vencida" ){%>
                                <%="selected" %>
                                    <% } %> >Vencida
                            </option>
                        </select>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control mb-3" name="observaciones"
                            value="<%=recordsOrden["observaciones"]%>" required>
                    </div>
                </div>
                <br>
                <br>
                <div class="row">
                    <div class="col-9"></div>
                    <div class="col">
                        <button class="btn btn-secondary" type="submit">Actualizar orden</button>
                    </div>
                </div>
        </form>
    </div>
    <%- include("../comunes/components/footer-component") -%>
    <% } else { %>
        <%- include("../comunes/components/error-sesion") -%>
       <% } %> 