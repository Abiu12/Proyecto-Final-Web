<%- include("../comunes/components/header-component") -%>
    <div class="container">

        <h1>Actualizar empleado</h1>
        <br>
        <br>
        <form action="/empleados/update/<%=idEmpleado  %> " method="POST">
            <div class="container">
                <div class="row">
                    <div class="col-10">
                        <h2 class="title-black">Datos generales</h2>
                    </div>
                    <div class="col-2">
                        <h6>* Campos obligatorios</h6>
                    </div>

                </div>

                <br>
                <div class="row">
                    <div class="col">
                        <h4>Nombre*</h4>
                    </div>
                    <div class="col">
                        <h4>Primer apellido</h4>
                    </div>
                    <div class="col">
                        <h4>Segundo apellido</h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <input type="text" onkeypress="return soloLetras(event)" class="form-control mb-3" name="nombre"
                        value="<%=nombre%>"    required>
                    </div>
                    <div class="col">
                        <input type="text" onkeypress="return soloLetras(event)" class="form-control mb-3"
                        value="<%=primerApellido%>"    name="primerApellido">
                    </div>
                    <div class="col">
                        <input type="text" onkeypress="return soloLetras(event)" class="form-control mb-3"
                        value="<%=segundoApellido%>"    name="segundoApellido">
                    </div>
                </div>
                <br>
                <br>
                <div class="row">

                    <div class="col">
                        <h4>GÃ©nero*</h4>
                    </div>

                </div>

                <div class="row">
                    <div class="col-4">
                        <select name="genero" id="genero" class="form-control mb-3">
                            <option value="H">Hombre</option>
                            <option value="M">Mujer</option>
                        </select>

                    </div>


                </div>
                <br>
                <br>
                <div class="row">
                    <div class="col-10"></div>
                    <div class="col">
                        <button class="btn btn-secondary" type="submit">Actualizar empleado</button>
                    </div>

                </div>


            </div>



        </form>


    </div>
    <%- include("../comunes/components/footer-component") -%>